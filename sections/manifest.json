{
  "name": "shockwavehq-site",
  "version": "1.1.0",
  "cdn_base": "https://cdn.jsdelivr.net/gh/shockwavehq/shockwave-website@main",
  "engine": {
    "css": "/shockwave-live.css",
    "js": "/shockwave-engine.js"
  },
  "sections": [
    { "id": "hero", "css": "/sections/hero.css", "js": "/sections/hero.js", "selector": "#hero", "events": ["hero_seen","hero_primary_cta_click","hero_secondary_cta_click"], "defer": false },
    { "id": "roi-calculator", "css": "/sections/roi.css", "js": "/sections/roi.js", "selector": "#roi-calculator", "events": ["roi_submit","roi_result_view","roi_email_submit","roi_book_demo_click"], "defer": true },
  "brand_tokens": {
    "colors": {
      "primary": "#D12E1F",
      "primary_hover": "#B8271B",
      "text": "#000000",
      "muted": "#4A4A4A",
      "bg": "#FFFFFF",
      "divider": "#E7E7E7"
    },
    "fonts": {
      "head": "Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
      "body": "Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif"
    }
  },
  "assets": {
    "preload": [
      { "as": "image", "href": "/assets/hero/hero-mock-desktop.webp", "imagesrcset": "/assets/hero/hero-mock-mobile.webp 560w, /assets/hero/hero-mock-desktop.webp 720w", "imagesizes": "(max-width: 768px) 92vw, 560px", "fetchpriority": "high" }
    ],
    "fonts": [
      { "href": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&display=swap", "rel": "stylesheet", "preconnect": ["https://fonts.googleapis.com", "https://fonts.gstatic.com"] }
    ]
  },
  "analytics": {
    "data_layer_key": "event",
    "section_key": "section",
    "default_section": "unknown"
  },
  "flags": {
    "respect_reduced_motion": true,
    "defer_non_critical": true,
    "no_third_party_in_hero": true
  },
  "sections": [
    {
      "id": "hero",
      "css": "/sections/hero.css",
      "js": "/sections/hero.js",
      "selector": "#hero",
      "events": ["hero_seen", "hero_primary_cta_click", "hero_secondary_cta_click"],
      "defer": false
    },
    {
      "id": "roi-calculator",
      "css": "/sections/roi.css",
      "js": "/sections/roi.js",
      "selector": "#roi-calculator",
      "events": ["roi_submit", "roi_result_view", "roi_email_submit", "roi_book_demo_click"],
      "defer": true
    },
    { "id": "demo", "css": "/sections/demo.css", "js": "/sections/demo.js", "selector": "#demo", "defer": true },
    { "id": "problem-outcome", "css": "/sections/problem.css", "js": "/sections/problem.js", "selector": "#problem-outcome", "defer": true },
    { "id": "solutions", "css": "/sections/solutions.css", "js": "/sections/solutions.js", "selector": "#solutions", "defer": true },
    { "id": "verticals", "css": "/sections/verticals.css", "js": "/sections/verticals.js", "selector": "#verticals", "defer": true },
    { "id": "value-proof", "css": "/sections/value.css", "js": "/sections/value.js", "selector": "#value-proof", "defer": true },
    { "id": "process", "css": "/sections/process.css", "js": "/sections/process.js", "selector": "#process", "defer": true },
    { "id": "testimonials", "css": "/sections/testimonials.css", "js": "/sections/testimonials.js", "selector": "#testimonials", "defer": true },
    { "id": "pricing-preview", "css": "/sections/pricing.css", "js": "/sections/pricing.js", "selector": "#pricing-preview", "defer": true },
    { "id": "integrations", "css": "/sections/integrations.css", "js": "/sections/integrations.js", "selector": "#integrations", "defer": true },
    { "id": "faq-preview", "css": "/sections/faq.css", "js": "/sections/faq.js", "selector": "#faq-preview", "defer": true },
    { "id": "final-cta", "css": "/sections/final-cta.css", "js": "/sections/final-cta.js", "selector": "#final-cta", "defer": true }
  ],
  "motion": {
    "default": "fadeUp",
    "observer": { "rootMargin": "0px 0px -10% 0px", "threshold": 0.2, "once": true }
  }
}
